server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://{{ bastion_ip }}:3100/loki/api/v1/push

scrape_configs:
  - job_name: {{ container_name }}-logs
    static_configs:
      - targets:
          - localhost
        labels:
          job: {{ container_name }}
          host: {{ host_name }}
          __path__: {{ container_log_path }}